<odoo>
    <data>
        <record id="cnt_backup.backup_form" model="ir.ui.view">
            <field name="name">cnt_backup.backup_form</field>
            <field name="model">cnt_backup.backup</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" string="Nama"/>
                            <field name="alamat" string="Alamat"/>
                            <field name="tanggal_lahir" string="Tanggal Lahir"/>
                            <field name="jenis_kelamin" string="Jenis Kelamin" widget='radio'/>
                            <field name="social_media" string="Social Media yang dipakai" widget ='badges'/>
                            <field name="ngekos" string="Anda ngekos?" widget = 'toggle'/>
                            <field name="nik" string="NIK"/>
                            <field name="umur" string="Umur"/>
                            <button name="hitung_umur" string="Umur" type='object'></button>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cnt_backup_backup_action" model="ir.actions.act_window">
            <field name="name">Backup</field>
            <field name="res_model">cnt_backup.backup</field>
            <field name="view_mode">tree,form,kanban,graph</field>
        </record>
        
        <record id="cnt_backup_backup_tree" model="ir.ui.view">
            <field name="name">cnt_backup.backup_tree</field>
            <field name="model">cnt_backup.backup</field>
            <field name="arch" type="xml">
                <tree default_order='name asc' limit="20">
                        <field name="name" string="Nama" optional="show"/>
                </tree>
            </field>
        </record>
